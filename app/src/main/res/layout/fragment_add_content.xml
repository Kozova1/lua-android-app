<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".AddContentFragment"
  android:padding="16dp">
  <RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checkedButton="@id/add_article_radio"
    android:id="@+id/radio_buttons">
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/add_article_radio"
      android:id="@+id/add_article_radio"/>
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/add_exercise_radio"
      android:id="@+id/add_exercise_radio"/>
  </RadioGroup>
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_target"
    android:layout_below="@id/radio_buttons" />
</RelativeLayout>