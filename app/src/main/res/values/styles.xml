<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="FirstTimeSetupTheme" parent="ThemeOverlay.AppCompat">
        <item name="buttonStyle">@style/FirstTimeSetupButtonTheme</item>
        <item name="colorPrimary">#1F4FFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="FirstTimeSetupButtonTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/firsttime_btn_bg</item>
        <item name="colorPrimary">#1F4FFF</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of navigation drawer icon, back arrow and options menu -->
        <item name="colorControlNormal">@color/primaryTextColor</item>
    </style>

    <style name="MenuText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>